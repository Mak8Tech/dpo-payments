{
  "name": "mak8tech/dpo-payments",
  "description": "Laravel 12 package for DPO Group payment gateway integration with support for African markets",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Mak8Tech",
      "email": "support@mak8tech.com"
    }
  ],
  "require": {
    "php": "^8.3",
    "laravel/framework": "^12.0",
    "guzzlehttp/guzzle": "^7.10",
    "nesbot/carbon": "^3.10"
  },
  "require-dev": {
    "orchestra/testbench": "^10.6",
    "phpunit/phpunit": "^12.3",
    "mockery/mockery": "^1.6"
  },
  "autoload": {
    "psr-4": {
      "Mak8Tech\\DpoPayments\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mak8Tech\\DpoPayments\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Mak8Tech\\DpoPayments\\DpoPaymentServiceProvider"
      ],
      "aliases": {
        "DpoPayment": "Mak8Tech\\DpoPayments\\Facades\\DpoPayment"
      }
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
